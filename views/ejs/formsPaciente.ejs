<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Formul√°rio Paciente</title>
</head>

<body>

    <div class="container mt-5">
        <h2 class="text-center">Cadastrar Pacientes</h2>
        <form method="post" action="criar-paciente">
            <div class="form-group">
                <label for="inputNomePaciente">Nome do Paciente</label>
                <input type="text" class="form-control" id="inputNomePaciente" name="NomePaciente"
                    placeholder="Digite o nome do paciente" required>
            </div>
            <div class="form-group">
                <label for="inputDataNascimento">Data de Nascimento</label>
                <input type="date" class="form-control" id="inputDataNascimento" name="dataDeNascimento" required>
            </div>
            <div class="form-group">
                <label for="inputCPF">CPF</label>
                <input type="text" class="form-control" id="inputCPF" placeholder="Digite o CPF" name="cpf" required>
            </div>
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" class="form-control" id="inputEmail" placeholder="Digite o email" name="email"
                    required>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>

        <h2 class="text-center">Alterar Pacientes</h2>

        <% pacientes.forEach((paciente)=> { %>
            <form action="alterar-paciente" method="POST">
                <!-- ID da especialidade que fica escondido -->
                <input readonly value="<%= paciente.ID %>" type="text" class="form-control d-none" id="id" name="id">

                <div class="form-group">
                    <label for="inputNome">Nome</label>
                    <input type="text" class="form-control" id="inputNome" placeholder="Digite o nome"
                        name="NomePaciente" value="<%= paciente.NomePaciente %>" required>
                </div>

                <div class="form-group">
                    <label for="inputDataNascimento">Data de Nascimento</label>
                    <input type="text" class="form-control" id="inputDataNascimento" name="dataDeNascimento" required
                        value="<%= paciente.DataNascimento %>">
                </div>
                <div class="form-group">
                    <label for="inputCPF">CPF</label>
                    <input type="text" class="form-control" id="inputCPF" placeholder="Digite o CPF" name="cpf" required
                        value="<%= paciente.CPF %>">
                </div>
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" class="form-control" id="inputEmail" placeholder="Digite o email" name="email"
                        required value="<%= paciente.email %>">
                </div>

                <button type="submit" class="btn btn-secondary" name="acao" value="alterar">Alterar</button>
                <button type="submit" class="btn btn-danger" name="acao" value="excluir">Excluir</button>
            </form>
            <% }); %>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>